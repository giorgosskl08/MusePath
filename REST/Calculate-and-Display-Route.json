{
  "openapi": "3.0.4",
  "info": {
    "title": "Museum Route Navigation API",
    "description": "API for route creation, navigation, and personalized experiences within a museum setting.",
    "version": "1.0.0"
  },
  "paths": {
    "/routes": {
      "post": {
        "summary": "Create and calculate a new route",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RouteRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Route calculated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RouteResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/routes/{id}": {
      "put": {
        "summary": "Update an existing route",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RouteUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Route updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RouteResponse"
                }
              }
            }
          },
          "500": {
            "description": "Unable to calculate route at this time",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Cancel navigation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Route navigation cancelled successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/destinations/{destinationId}/accessibility": {
      "get": {
        "summary": "Check if a destination is accessible",
        "parameters": [
          {
            "name": "destinationId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Accessibility status retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessibilityResponse"
                }
              }
            }
          }
        }
      }
    },
    "/routes/personalised": {
      "post": {
        "summary": "Generate personalized route",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Personalized route generated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PersonalisedRouteResponse"
                }
              }
            }
          },
          "404": {
            "description": "User preferences not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RouteRequest": {
        "type": "object",
        "required": ["userId", "destinationId", "startingPoint"],
        "properties": {
          "userId": { "type": "integer" },
          "destinationId": { "type": "integer" },
          "startingPoint": {
            "type": "object",
            "properties": {
              "lat": { "type": "number" },
              "lng": { "type": "number" }
            }
          },
          "stops": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "lat": { "type": "number" },
                "lng": { "type": "number" }
              }
            }
          }
        }
      },
      "RouteUpdate": {
        "type": "object",
        "properties": {
          "startingPoint": {
            "type": "object",
            "properties": {
              "lat": { "type": "number" },
              "lng": { "type": "number" }
            }
          },
          "stops": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "lat": { "type": "number" },
                "lng": { "type": "number" }
              }
            }
          }
        }
      },
      "RouteResponse": {
        "type": "object",
        "properties": {
          "routeId": { "type": "integer" },
          "estimatedArrivalTime": { "type": "string" },
          "directions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "destinationId": { "type": "integer" },
          "userId": { "type": "integer" }
        }
      },
      "AccessibilityResponse": {
        "type": "object",
        "properties": {
          "destinationId": { "type": "integer" },
          "accessible": { "type": "boolean" },
          "message": { "type": "string" },
          "suggestedAlternatives": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "destinationId": { "type": "integer" },
                "name": { "type": "string" }
              }
            }
          }
        }
      },
      "PersonalisedRouteResponse": {
        "type": "object",
        "properties": {
          "routeId": { "type": "integer" },
          "estimatedArrivalTime": { "type": "string" },
          "directions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "basedOn": { "type": "string" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "message": { "type": "string" },
          "suggestions": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
